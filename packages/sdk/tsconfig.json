{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "declaration": true,
        "emitDeclarationOnly": true,
        "strictPropertyInitialization": false,
        "allowJs": true,
        "paths": {
            "@src/*": ["./src/*"]
        }
    }
}
